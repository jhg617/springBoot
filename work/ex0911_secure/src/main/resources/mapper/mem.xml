<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.ex0911_secure.mapper.MemberMapper">
  
  <!-- 로그인기능 -->
  <select id="login" resultType="com.sist.ex0911_secure.vo.MemVO"
  parameterType="String">
    SELECT * FROM member_t
    WHERE m_id = #{mid}
  </select>

  <!-- 회원가입기능 -->
  <insert id="reg" parameterType="com.sist.ex0911_secure.vo.MemVO">
    INSERT INTO member_t(m_id, m_pw, m_name)
    VALUES(#{m_id}, #{m_pw}, #{m_name})
  </insert>
</mapper>